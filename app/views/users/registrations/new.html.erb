<!-- Signup -->
<div class="flex flex-col col-span-9 max-w-lg mx-auto shadow px-6 py-7 rounded overflow-hidden">

  <h2 class="text-2xl uppercase font-medium mb-1">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="space-y-2">

    <div class="field">
      <%= f.label :firstname, class: 'text-gray-600 mb-1 block' %><br />
      <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class: 'block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400', placeholder: 'Firstname' %>
    </div>

    <div class="field">
      <%= f.label :lastname, class: 'text-gray-600 mb-1 block' %><br />
      <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: 'block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400', placeholder: 'Lastname' %>
    </div>

    <div class="field">
      <%= f.label :email, class: 'text-gray-600 mb-1 block' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400', placeholder: 'Email@shopflow.com' %>
    </div>

    <div class="field">
      <%= f.label :phone, class: 'text-gray-600 mb-1 block' %><br />
      <%= f.phone_field :phone, autofocus: true, autocomplete: "phone", class: 'block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400', placeholder: '066666666' %>
    </div>

    <div class="field">
      <%= f.label :address, class: 'text-gray-600 mb-1 block' %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400', placeholder: 'Address' %>
    </div>


    <div class="field">
      <%= f.label :password, class: 'text-gray-600 mb-1 block' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400', placeholder: '*********' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'text-gray-600 mb-1 block'  %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'block w-full border border-gray-300 px-4 py-3 text-gray-600 text-sm rounded focus:ring-0 focus:border-primary placeholder-gray-400', placeholder: '*********' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'block w-full cursor-pointer py-2 text-center text-white bg-primary border border-primary rounded hover:bg-transparent hover:text-primary transition uppercase font-roboto font-medium' %>
    </div>

  </div>
  <% end %>

<%= render "users/shared/links" %>
</div>
<!--/Sign up-->