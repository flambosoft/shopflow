<!DOCTYPE html>
<html>
<head>
  <title>Shopflow Admin</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "admin", "data-turbo-track": "reload", defer: true %>
</head>

<body class="bg-gray-50 dark:bg-gray-800" data-controller="sidebar">
<%= flash_messages %>
<%= render partial: "layouts/admin/navbar" %>
<div class="flex pt-16 overflow-hidden bg-gray-50 dark:bg-gray-900">

  <%= render partial: "layouts/admin/sidebar" %>

  <div id="main-content" class="flex flex-col relative w-full h-screen overflow-y-auto bg-white lg:ml-64 dark:bg-gray-900">
    <main class="flex-1">
      <%= yield %>
    </main>
    <%= render partial: "layouts/admin/footer" %>
  </div>

</div>
</body>
</html>
