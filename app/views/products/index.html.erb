<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
    </p>
  <% end %>
</div>



<%= link_to "New product", new_product_path %>


<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="p-4">
        <div class="flex items-center">
          <input id="checkbox-all-search" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
          <label for="checkbox-all-search" class="sr-only">checkbox</label>
        </div>
      </th>
      <th scope="col" class="px-6 py-3">
        Product name
      </th>
      <th scope="col" class="px-6 py-3">
        Short description
      </th>
      <th scope="col" class="px-6 py-3">
        Ingredients
      </th>
      <th scope="col" class="px-6 py-3">
        Reference
      </th>
      <th scope="col" class="px-6 py-3">
        Original name
      </th>
      <th scope="col" class="px-6 py-3">
        Slug
      </th>
      <th scope="col" class="px-6 py-3">
        Tags
      </th>
      <th scope="col" class="px-6 py-3">
        Status
      </th>
      <th scope="col" class="px-6 py-3">
        Action
      </th>
    </tr>
    </thead>
    <tbody>
    <% @products.each do |product| %>
      <%= link_to  product do %>
    <a href="">
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
          <td class="w-4 p-4">
            <div class="flex items-center">
              <input id="checkbox-table-search-1" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
              <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
            </div>
          </td>
          <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <%= product.name %>
          </th>
          <td class="px-6 py-4">
            <%= product.short_description %>
          </td>
          <td class="px-6 py-4">
            <%= product.ingredients %>
          </td>
          <td class="px-6 py-4">
            <%= product.reference %>
          </td>
          <td class="px-6 py-4">
            <%= product.original_name %>
          </td>
          <td class="px-6 py-4">
            <%= product.slug %>
          </td>
          <td class="px-6 py-4">
            <%= product.tags %>
          </td>
          <td class="px-6 py-4">
            <span class="flex items-center text-sm font-medium text-gray-900 dark:text-white"><span class="flex w-2.5 h-2.5 <%= product.enabled == true ? "bg-green-500" : "bg-red-500" %> rounded-full mr-1.5 flex-shrink-0"></span><%= product.enabled == true ? "Enabled" : "Disabled" %></span>
            <% if product.enabled == true %>

            <% else %>
              <span class="flex items-center text-sm font-medium text-gray-900 dark:text-white"><span class="flex w-2.5 h-2.5 bg-blue-600 rounded-full mr-1.5 flex-shrink-0"></span>Disabled</span>
            <% end %>
          </td>
          <td class="flex items-center px-6 py-4 space-x-3">
            <a href="<%= edit_product_path(product) %>" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
            <a href="#" class="font-medium text-red-600 dark:text-red-500 hover:underline">Remove</a>
          </td>
        </tr>
    </a>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>

